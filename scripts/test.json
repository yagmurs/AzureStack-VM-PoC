{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "virtualMachineName": {
            "type": "string",
            "defaultValue": "AzS-HOST1",
            "metadata": {
                "name": "AzS-HOST1"
            }
        },
        "virtualMachineSize": {
            "type": "string",
            "allowedValues": [
                "Standard_E4s_v3",
                "Standard_E8s_v3",
                "Standard_E16s_v3",
                "Standard_E20s_v3",
                "Standard_D32s_v3",
                "Standard_E32-16s_v3",
                "Standard_E32s_v3",
                "Standard_D64s_v3",
                "Standard_E64s_v3"
            ],
            "defaultValue": "Standard_E16s_v3",
            "metadata": {
                "name": "Standard_E16s_v3"
            }
        },
        "dataDiskSizeinGB": {
            "type": "int",
            "allowedValues": [
                256,
                512,
                1024
            ],
            "defaultValue": 256,
            "metadata": {
                "name": 256
            }
        },
        "dataDiskCount": {
            "type": "int",
            "allowedValues": [
                3,
                4,
                8,
                12,
                16,
                20,
                24,
                28,
                32
            ],
            "defaultValue": 3,
            "metadata": {
                "name": 3
            }
        },
        "virtualNetworkName": {
            "type": "string",
            "defaultValue": "AzureStack-VNET",
            "metadata": {
                "name": "AzureStack-VNET"
            }
        },
        "adminPassword": {
            "type": "securestring"
        },
        "addressPrefix": {
            "type": "string",
            "defaultValue": "10.0.0.0/24",
            "metadata": {
                "name": "10.0.0.0/24"
            }
        },
        "subnetName": {
            "type": "string",
            "defaultValue": "default",
            "metadata": {
                "name": "default"
            }
        },
        "subnetPrefix": {
            "type": "string",
            "defaultValue": "10.0.0.0/24",
            "metadata": {
                "name": "10.0.0.0/24"
            }
        },
        "publicIpAddressType": {
            "type": "string",
            "defaultValue": "Dynamic",
            "allowedValues": [
                "Dynamic",
                "Static"
            ],
            "metadata": {
                "name": "Dynamic"
            }
        },
        "publicDnsName": {
            "type": "string"
        },
        "autoShutdownStatus": {
            "type": "string",
            "defaultValue": "Disabled",
            "allowedValues": [
                "Enabled",
                "Disabled"
            ],
            "metadata": {
                "name": "Disabled"
            }
        },
        "autoShutdownTime": {
            "type": "string",
            "defaultValue": "23:00",
            "metadata": {
                "name": "23:00"
            }
        },
        "autoShutdownTimeZone": {
            "type": "string",
            "defaultValue": "UTC",
            "metadata": {
                "name": "UTC"
            }
        },
        "autoShutdownNotificationStatus": {
            "type": "string",
            "defaultValue": "Disabled",
            "allowedValues": [
                "Enabled",
                "Disabled"
            ],
            "metadata": {
                "name": "Disabled"
            }
        },
        "autoDownloadASDK": {
            "type": "bool",
            "defaultValue": false,
            "allowedValues": [
                true,
                false
            ],
            "metadata": {
                "name": false
            }
        },
        "autoInstallASDK": {
            "defaultValue": false,
            "allowedValues": [
                true,
                false
            ],
            "type": "bool",
            "metadata": {
                "name": false
            }
        },
        "AzureADTenant": {
            "defaultValue": "<AzureADTenant>.onmicrosoft.com",
            "type": "string",
            "metadata": {
                "name": "<AzureADTenant>.onmicrosoft.com"
            }
        },
        "AzureADGlobalAdmin": {
            "defaultValue": "<alias>@<AzureADTenant>.onmicrosoft.com",
            "type": "string",
            "metadata": {
                "name": "<alias>@<AzureADTenant>.onmicrosoft.com"
            }
        },
        "AzureADGlobalAdminPassword": {
            "type": "securestring",
            "defaultValue": "1234",
            "metadata": {
                "name": "1234"
            }
        },
        "ASDKConfiguratorObject": {
            "type": "secureObject",
            "defaultValue": {
                "command": "configASDK.ps1",
                "path": "c:\\ConfigASDK",
                "AutoRun": "false",
                "ASDKConfiguratorParams": {
                    "azureDirectoryTenantName": "<AzureADTenant>.onmicrosoft.com",
                    "authenticationType": "AzureAD",
                    "downloadPath": "D:\\ASDKfiles",
                    "ISOPath": "D:\\WS2016EVALISO.iso",
                    "azureStackAdminPwd": "<password>",
                    "VMpwd": "<password>",
                    "AzureADUsername": "<alias>@<AzureADTenant>.onmicrosoft.com",
                    "azureAdPwd": "<password>",
                    "registerASDK": "true",
                    "useAzureCredsForRegistration":"true",
                    "azureRegSubId": "xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx"
                }
            }
        },
        "enableRDSH": {
            "type": "bool",
            "defaultValue": false,
            "allowedValues": [
                true,
                false
            ],
            "metadata": {
                "name": false
            }
        },
        "branch": {
            "type": "string",
            "defaultValue": "development",
            "allowedValues": [
                "master",
                "development"
            ],
            "metadata": {
                "name": "development"
            }
        },
        "siteLocation": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]",
            "metadata": {
                "name": "[resourceGroup().location]"
            }
        }
    },
    "variables": {
        "vnetId": "[resourceId(resourceGroup().name,'Microsoft.Network/virtualNetworks', parameters('virtualNetworkName'))]",
        "subnetRef": "[concat(variables('vnetID'), '/subnets/', parameters('subnetName'))]",
        "scriptFileName": "post-config.ps1",
        "scriptPath": "[concat('https://raw.githubusercontent.com/yagmurs/AzureStack-VM-PoC/', parameters('branch'), '/scripts/')]",
        "fileUri": "[concat(variables('scriptPath'), variables('scriptFileName'))]",
        "adminUsername": "__administrator",
        "osDiskSizeinGB": 256,
        "networkInterfaceName": "[concat(parameters('virtualMachineName'),'-NIC')]",
        "networkSecurityGroupName": "[concat(parameters('virtualMachineName'),'-NSG')]",
        "publicIpAddressName": "[concat(parameters('virtualMachineName'),'-IP')]",
        "singleQuote": "'",
        "autoInstallASDKparameters": "[if(bool(parameters('autoInstallASDK')), concat(' -AutoInstallASDK ',' -AzureADTenant ', parameters('AzureADTenant'), ' -AzureADGlobalAdmin ', parameters('AzureADGlobalAdmin'), ' -AzureADGlobalAdminPass ', parameters('AzureADGlobalAdminPassword'), ' -LocalAdminPass ', parameters('adminPassword')), '')]",
        "ASDKConfiguratorParameters": "[concat(' -ASDKConfiguratorObject ', variables('singleQuote'), replace(replace(string(parameters('ASDKConfiguratorObject')), '\\', '\\\\'), '\"', '\\\"'), variables('singleQuote'))]"
    },
    "resources": [
        {
            "name": "[parameters('virtualMachineName')]",
            "type": "Microsoft.Compute/virtualMachines",
            "apiVersion": "2018-10-01",
            "location": "[parameters('sitelocation')]",
            "dependsOn": [
                "[concat('Microsoft.Network/networkInterfaces/', variables('networkInterfaceName'))]"
            ],
            "properties": {
                "osProfile": {
                    "computerName": "[parameters('virtualMachineName')]",
                    "adminUsername": "[variables('adminUsername')]",
                    "adminPassword": "[parameters('adminPassword')]",
                    "windowsConfiguration": {
                        "provisionVmAgent": "true"
                    }
                },
                "hardwareProfile": {
                    "vmSize": "[parameters('virtualMachineSize')]"
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "MicrosoftWindowsServer",
                        "offer": "WindowsServer",
                        "sku": "2016-Datacenter",
                        "version": "latest"
                    },
                    "osDisk": {
                        "createOption": "FromImage",
                        "name": "[concat(parameters('virtualMachineName'), '-osdisk')]",
                        "diskSizeGB": "[variables('osDiskSizeinGB')]",
                        "managedDisk": {
                            "storageAccountType": "Premium_LRS"
                        }
                    },
                    "copy": [
                        {
                            "name": "dataDisks",
                            "count": "[parameters('dataDiskCount')]",
                            "input": {
                                "createOption": "Empty",
                                "lun": "[copyIndex('dataDisks')]",
                                "name": "[concat(parameters('virtualMachineName'),'-disk',copyIndex('dataDisks'))]",
                                "diskSizeGB": "[parameters('dataDiskSizeinGB')]",
                                "caching": "ReadOnly",
                                "managedDisk": {
                                    "storageAccountType": "Premium_LRS"
                                }
                            }
                        }
                    ]
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('networkInterfaceName'))]"
                        }
                    ]
                },
                "licenseType": "Windows_Server"
            },
            "resources": [
                {
                    "type": "extensions",
                    "name": "CustomScriptExtension",
                    "apiVersion": "2018-10-01",
                    "location": "[parameters('sitelocation')]",
                    "dependsOn": [
                        "[parameters('virtualMachineName')]"
                    ],
                    "properties": {
                        "publisher": "Microsoft.Compute",
                        "type": "CustomScriptExtension",
                        "typeHandlerVersion": "1.9",
                        "autoUpgradeMinorVersion": true,
                        "settings": {
                            "fileUris": [
                                "[variables('fileUri')]"
                            ],
                            "commandToExecute": "[concat('powershell.exe -ExecutionPolicy Unrestricted -File ', variables('scriptFileName'), ' -Username ', variables('adminUsername'), ' -Branch ', parameters('branch'), ' -EnableDownloadASDK ', ' -AzureImage ', ' -AutoDownloadASDK ', parameters('autoDownloadASDK'), ' -EnableRDSH ', parameters('enableRDSH'), variables('autoInstallASDKparameters'), variables('ASDKConfiguratorParameters'))]"
                        }
                    }
                },
                {
                    "type": "Microsoft.DevTestLab/schedules",
                    "name": "[concat('shutdown-computevm-', parameters('virtualMachineName'))]",
                    "apiVersion": "2018-09-15",
                    "location": "[parameters('sitelocation')]",
                    "tags": {},
                    "properties": {
                        "status": "[parameters('autoShutdownStatus')]",
                        "taskType": "ComputeVmShutdownTask",
                        "dailyRecurrence": {
                            "time": "[parameters('autoShutdownTime')]"
                        },
                        "timeZoneId": "[parameters('autoShutdownTimeZone')]",
                        "targetResourceId": "[resourceId('Microsoft.Compute/virtualMachines', parameters('virtualMachineName'))]",
                        "notificationSettings": {
                            "status": "[parameters('autoShutdownNotificationStatus')]",
                            "notificationLocale": "en",
                            "timeInMinutes": "30"
                        }
                    },
                    "dependsOn": [
                        "[concat('Microsoft.Compute/virtualMachines/', parameters('virtualMachineName'))]"
                    ]
                }
            ]
        },
        {
            "name": "[parameters('virtualNetworkName')]",
            "type": "Microsoft.Network/virtualNetworks",
            "apiVersion": "2018-10-01",
            "location": "[parameters('sitelocation')]",
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "[parameters('addressPrefix')]"
                    ]
                },
                "subnets": [
                    {
                        "name": "[parameters('subnetName')]",
                        "properties": {
                            "addressPrefix": "[parameters('subnetPrefix')]"
                        }
                    }
                ]
            }
        },
        {
            "name": "[variables('networkInterfaceName')]",
            "type": "Microsoft.Network/networkInterfaces",
            "apiVersion": "2018-10-01",
            "location": "[parameters('sitelocation')]",
            "dependsOn": [
                "[concat('Microsoft.Network/virtualNetworks/', parameters('virtualNetworkName'))]",
                "[concat('Microsoft.Network/publicIpAddresses/', variables('publicIpAddressName'))]",
                "[concat('Microsoft.Network/networkSecurityGroups/', variables('networkSecurityGroupName'))]"
            ],
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipconfig1",
                        "properties": {
                            "subnet": {
                                "id": "[variables('subnetRef')]"
                            },
                            "privateIPAllocationMethod": "Dynamic",
                            "publicIPAddress": {
                                "id": "[resourceId(resourceGroup().name,'Microsoft.Network/publicIpAddresses', variables('publicIpAddressName'))]"
                            }
                        }
                    }
                ],
                "networkSecurityGroup": {
                    "id": "[resourceId(resourceGroup().name, 'Microsoft.Network/networkSecurityGroups', variables('networkSecurityGroupName'))]"
                }
            }
        },
        {
            "name": "[variables('publicIpAddressName')]",
            "type": "Microsoft.Network/publicIPAddresses",
            "apiVersion": "2019-02-01",
            "location": "[parameters('sitelocation')]",
            "properties": {
                "publicIPAllocationMethod": "[parameters('publicIpAddressType')]",
                "publicIPAddressVersion": "IPv4",
                "dnsSettings": {
                    "domainNameLabel": "[parameters('publicDnsName')]",
                    "fqdn": "[concat(parameters('publicDnsName'), '.', parameters('sitelocation'), '.cloudapp.azure.com')]"
                }
            }
        },
        {
            "name": "[variables('networkSecurityGroupName')]",
            "type": "Microsoft.Network/networkSecurityGroups",
            "apiVersion": "2019-02-01",
            "location": "[parameters('sitelocation')]",
            "properties": {
                "securityRules": [
                    {
                        "name": "default-allow-rdp",
                        "properties": {
                            "priority": 1000,
                            "sourceAddressPrefix": "*",
                            "protocol": "Tcp",
                            "destinationPortRange": "3389",
                            "access": "Allow",
                            "direction": "Inbound",
                            "sourcePortRange": "*",
                            "destinationAddressPrefix": "*"
                        }
                    },
                    {
                        "name": "allow-psremoting",
                        "properties": {
                            "priority": 1010,
                            "sourceAddressPrefix": "*",
                            "protocol": "Tcp",
                            "destinationPortRange": "5985",
                            "access": "Allow",
                            "direction": "Inbound",
                            "sourcePortRange": "*",
                            "destinationAddressPrefix": "*"
                        }
                    }
                ]
            }
        }
    ],
    "outputs": {
        "adminUsername": {
            "type": "string",
            "value": "[concat(parameters('virtualMachineName'),'\\','Administrator')]"
        },
        "IPAddress": {
            "type": "string",
            "value": "[reference(variables('publicIpAddressName')).dnssettings.fqdn]"
        }
    }
}
